<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">



    <filter>
        <filter-name>SimpleCorsFilter</filter-name>
        <filter-class>SimpleCORSFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SimpleCorsFilter</filter-name>
        <url-pattern>/upload</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SimpleCorsFilter</filter-name>
        <url-pattern>/getUsersList</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SimpleCorsFilter</filter-name>
        <url-pattern>/getCanvas</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SimpleCorsFilter</filter-name>
        <url-pattern>/createCanvas</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SimpleCorsFilter</filter-name>
        <url-pattern>/createUser</url-pattern>
    </filter-mapping>




    <servlet>
        <servlet-name>pdfServlet</servlet-name>
        <servlet-class>PDFUpload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pdfServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getUsersList</servlet-name>
        <servlet-class>GetUserList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getUsersList</servlet-name>
        <url-pattern>/getUsersList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getCanvas</servlet-name>
        <servlet-class>GetCanvas</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getCanvas</servlet-name>
        <url-pattern>/getCanvas</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createCanvas</servlet-name>
        <servlet-class>CreateCanvas</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createCanvas</servlet-name>
        <url-pattern>/createCanvas</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createUser</servlet-name>
        <servlet-class>CreateUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createUser</servlet-name>
        <url-pattern>/createUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateCanvas</servlet-name>
        <servlet-class>CanvasUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateCanvas</servlet-name>
        <url-pattern>/updateCanvas</url-pattern>
    </servlet-mapping>

</web-app>